<p id="notice"><%= notice %></p>

<h1>Shortened Links</h1>

<table>
  <thead>
    <tr>
      <th>Original url</th>
      <th>Shortened url</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shortened_links.each do |shortened_link| %>
      <tr>
        <td><%= shortened_link.original_url %></td>
        <td><%= absolute_shortened_link_url(shortened_link.code) %></td>
        <td><%= shortened_link.views %></td>
        <td><%= link_to 'Show', shortened_link %></td>
        <td><%= link_to 'Edit', edit_shortened_link_path(shortened_link) %></td>
        <td><%= link_to 'Destroy', shortened_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shortened Link', new_shortened_link_path %>
